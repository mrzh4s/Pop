{
    "name": "pop-framework/pop",
    "description": "Minimal PHP Template - Ready for your JS framework",
    "type": "project",
    "license": "MIT",
    "keywords": ["php", "template", "minimal", "framework", "react", "vue", "svelte"],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
