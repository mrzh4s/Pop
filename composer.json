{
    "name": "langkasuka/pop",
    "description": "Modern PHP framework implementing Vertical Slice Architecture with Inertia.js integration. Zero external dependencies, auto-discovery, and built-in RBAC.",
    "type": "project",
    "license": "MIT",
    "keywords": ["framework", "php", "vertical-slice", "vsa", "inertia", "react", "vue", "svelte", "minimal", "zero-dependency", "rbac"],
    "homepage": "https://github.com/mrzh4s/Pop",
    "authors": [
        {
            "name": "mrzh4s",
            "email": "mrzh4s@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/mrzh4s/Pop/issues",
        "source": "https://github.com/mrzh4s/Pop",
        "docs": "https://github.com/mrzh4s/Pop#readme"
    },
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "Framework/",
            "Infrastructure\\": "Infrastructure/",
            "Features\\": "Features/",
            "Config\\": "Config/"
        },
        "files": [
            "Framework/Helpers/env.php",
            "Framework/Helpers/config.php",
            "Framework/Helpers/debug.php",
            "Framework/Helpers/session.php",
            "Framework/Helpers/cookie.php",
            "Framework/Helpers/connection.php",
            "Framework/Helpers/migration.php",
            "Framework/Helpers/security.php",
            "Framework/Helpers/permission.php",
            "Framework/Helpers/activity.php",
            "Framework/Helpers/traffic.php",
            "Framework/Helpers/http.php",
            "Framework/Helpers/router.php",
            "Framework/Helpers/view.php",
            "Framework/Helpers/inertia.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "Tests/"
        }
    },
    "scripts": {
        "dev": "./run.sh",
        "build": "npm run build",
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
