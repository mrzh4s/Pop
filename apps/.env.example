# ============================================
# POP FRAMEWORK - ENVIRONMENT CONFIGURATION
# ============================================

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="Pop Framework"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://pop.test

# Auto-run database migrations on app startup
AUTO_MIGRATE=true

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Default database connection name
DB_DEFAULT=main

# App Database (SQLite) - Main application database
APP_DB=database/app.db

# ============================================
# DYNAMIC DATABASE CONNECTIONS
# ============================================
# Pattern: {NAME}_DB_HOST, {NAME}_DB_PORT, etc.
# The system will auto-discover all database connections
# based on environment variable prefixes.
#
# Example connection names:
# - MAIN_DB_* → DB::connection('main')
# - SOURCE_DB_* → DB::connection('source')
# - ANALYTICS_DB_* → DB::connection('analytics')
# - CACHE_DB_* → DB::connection('cache')

# Main Database (PostgreSQL)
MAIN_DB_DRIVER=pgsql
MAIN_DB_HOST=localhost
MAIN_DB_PORT=5432
MAIN_DB_DATABASE=main_db
MAIN_DB_USERNAME=postgres
MAIN_DB_PASSWORD=secret
MAIN_DB_CHARSET=utf8
MAIN_DB_SCHEMA=public

# Source Database (PostgreSQL) - Example additional connection
SOURCE_DB_DRIVER=pgsql
SOURCE_DB_HOST=localhost
SOURCE_DB_PORT=5432
SOURCE_DB_DATABASE=v2
SOURCE_DB_USERNAME=postgres
SOURCE_DB_PASSWORD=1234

# Destination Database (PostgreSQL) - Example migration target
DEST_DB_DRIVER=pgsql
DEST_DB_HOST=localhost
DEST_DB_PORT=5432
DEST_DB_DATABASE=interedge
DEST_DB_USERNAME=postgres
DEST_DB_PASSWORD=1234

# Analytics Database (MySQL) - Example MySQL connection
# ANALYTICS_DB_DRIVER=mysql
# ANALYTICS_DB_HOST=localhost
# ANALYTICS_DB_PORT=3306
# ANALYTICS_DB_DATABASE=analytics
# ANALYTICS_DB_USERNAME=root
# ANALYTICS_DB_PASSWORD=secret

# Cache Database (SQLite) - Example SQLite connection
# CACHE_DB_DRIVER=sqlite
# CACHE_DB_DATABASE=database/cache.db

# ============================================
# DYNAMIC FTP CONNECTIONS
# ============================================
# Pattern: {NAME}_FTP_HOST, {NAME}_FTP_PORT, etc.
# The system will auto-discover all FTP connections
# based on environment variable prefixes.
#
# Example connection names:
# - FTP_* → FTP::connection('default')
# - BACKUP_FTP_* → FTP::connection('backup')
# - CDN_FTP_* → FTP::connection('cdn')

# Default FTP Connection
FTP_HOST=ftp.example.com
FTP_PORT=21
FTP_USERNAME=username
FTP_PASSWORD=password
FTP_PATH=/public_html
FTP_PASSIVE=true
FTP_SSL=false
FTP_TIMEOUT=90

# Destination FTP Connection - Example additional FTP
DEST_FTP_HOST=ftp.yoursite.com
DEST_FTP_PORT=21
DEST_FTP_USERNAME=yourusername
DEST_FTP_PASSWORD=yourpassword
DEST_FTP_PATH=/path/to/upload

# Backup FTP Connection - Example backup server
# BACKUP_FTP_HOST=backup.example.com
# BACKUP_FTP_PORT=21
# BACKUP_FTP_USERNAME=backup_user
# BACKUP_FTP_PASSWORD=secret
# BACKUP_FTP_PATH=/backups

# CDN FTP Connection - Example CDN upload
# CDN_FTP_HOST=cdn.example.com
# CDN_FTP_PORT=21
# CDN_FTP_USERNAME=cdn_user
# CDN_FTP_PASSWORD=secret
# CDN_FTP_PATH=/cdn/assets
# CDN_FTP_SSL=true

